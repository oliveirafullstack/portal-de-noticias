  <style lang="scss">
    @use "../styles/main.scss" as indx;
    .wrapper {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 32px;
      & > div {
        width: 696px;
        width: 100%;
      }
    }

    #ia {
      header {
        margin-top: 80px;
        padding-block: 12px 24px;
        display: indx.$grid;
        grid-auto-flow: indx.$grid-flow-col;
        border-top: 1px solid indx.$stroke-color;
        h3 {
          margin-block: 8px 4px;
        }
        a {
          display: flex;
          justify-self: end;
          justify-content: center;
          align-self: center;
          gap: 8px;
        }
      }
    }
    #article {
      display: indx.$grid;
      gap: indx.$gap32;

      article {
        display: indx.$grid;
        grid-auto-flow: indx.$grid-flow-col;
        gap: indx.$gap;
        width: 696px;

        p {
          margin-top: 4px;
          font: indx.$text-sm;
          color: indx.$text-color-secondary;
        }
      }
    }
    #more {
      display: grid;
      gap: 32;
      header {
        display: flex;
        justify-content: space-between;
        font: indx.$text-span;
        border-top: 1px solid indx.$stroke-color;
        padding-top: 16px;
        & span:hover {
          color: indx.$brand-color-light;
        }
      }
      & article:nth-child(1) {
        margin-top: 18px;
      }
      article {
        display: indx.$grid;
        grid-auto-flow: indx.$grid-flow-col;
        gap: indx.$gap;
        margin-bottom: 32px;
      }
    }
    #ads {
      margin-top: 80px;
      margin-bottom: 48px;
    }
    header {
      display: flex;
      gap: 24px;
    }
  </style>
